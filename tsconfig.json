{
  "compilerOptions": {
    "lib": [
      "DOM",
      "ESNext",
    ],
    "target": "es5",
    "outDir": "./dist",
    "module": "ESNext",
    "moduleResolution": "node",
    "declaration": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "strict": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}